<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100dp"
    android:layout_marginLeft="@dimen/dimen_15dp"
    android:layout_marginRight="@dimen/dimen_15dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:src="@mipmap/user_fire"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/userinfo_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NAN"
                android:fontFamily="@font/zh_blod"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/ice_deep"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/userinfo_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ThisIsATestEmail@xxx.com"
                android:fontFamily="@font/en_blod"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/ice_deep"
                android:gravity="center_vertical|left"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>